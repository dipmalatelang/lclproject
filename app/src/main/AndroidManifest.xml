<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lcl">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/lcl"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LCL"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity android:name=".view.playerlist.PlayerListing"
            android:exported="true"/>
        <activity
            android:name=".view.teamlist.TeamListActivity"
            android:exported="true" />
        <activity
            android:name=".view.PlayerRegistration_Activity"
            android:exported="true" />
        <activity
            android:name=".view.HomeScreen_Activity"
            android:exported="true" />
        <activity android:name=".view.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>